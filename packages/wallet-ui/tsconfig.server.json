{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist-server",
    "rootDir": "server",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@agnicid/agent-sdk": ["../agent-sdk/src/index.ts"],
      "@agnicid/agent-sdk/*": ["../agent-sdk/src/*"],
      "@agnicid/issuer-cli": ["../issuer-cli/src/index.ts"],
      "@agnicid/issuer-cli/*": ["../issuer-cli/src/*"]
    }
  },
  "include": [
    "server/**/*"
  ],
  "references": [
    {
      "path": "../agent-sdk/tsconfig.json"
    },
    {
      "path": "../issuer-cli/tsconfig.json"
    }
  ]
}
