{
  "name": "agnic-id-mvp",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "shared",
    ".tooling"
  ],
  "scripts": {
    "build": "npm run build:deps && npm run build:workspaces",
    "build:workspaces": "npm run build --workspace @agnicid/service-seller && npm run build --workspace @agnicid/wallet-ui && npm run build --workspace @agnicid/main-server && npm run build --workspace @agnicid/mcp-bridge && npm run build --workspace @agnicid/tooling",
    "build:deps": "npm run build --workspace @agnicid/shared && npm run build --workspace @agnicid/agent-sdk && npm run build --workspace @agnicid/issuer-cli",
    "clean": "npm run -ws --if-present clean || true",
    "demo": "tsx .tooling/scripts/demo.ts",
    "lint": "npm run -ws --if-present lint",
    "dev": "npm run dev:main-server",
    "dev:backend-services": "concurrently \"npm:dev:seller\" \"npm:dev:wallet-api\" \"npm:dev:frontend\"",
    "dev:main-server": "cd packages/main-server && npm run dev",
    "dev:seller": "npm run dev --workspace @agnicid/service-seller",
    "dev:wallet-api": "npm run dev:server --workspace @agnicid/wallet-ui",
    "dev:frontend": "npm run dev:vite --workspace @agnicid/wallet-ui",
    "start": "cd packages/main-server && npm start"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  }
}
