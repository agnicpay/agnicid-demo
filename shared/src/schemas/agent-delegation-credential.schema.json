{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.agnic.id/agent-delegation-credential.json",
  "title": "AgentDelegationCredential",
  "type": "object",
  "required": [
    "@context",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject"
  ],
  "properties": {
    "@context": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "type": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "contains": {
        "const": "AgentDelegationCredential"
      }
    },
    "issuer": {
      "type": "string"
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "id",
        "capabilities",
        "ownerEmail"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "capabilities": {
          "type": "object",
          "properties": {
            "paymentProtocols": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "spendCapDaily": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "ownerEmail": {
          "type": "string",
          "format": "email"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
